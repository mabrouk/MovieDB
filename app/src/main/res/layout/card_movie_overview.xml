<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView android:id="@+id/rating"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="#000"
            android:elevation="@dimen/rating_elevation"
            />

        <TextView android:id="@+id/release_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_alignParentLeft="true"/>

        <TextView android:id="@+id/overview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:layout_below="@id/rating"
            android:layout_marginTop="12dp"
            android:textSize="16sp"/>

        <Button android:id="@+id/imdb_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/overview"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            android:text="IMDB"/>

        <Button android:id="@+id/homepage_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/imdb_btn"
            android:layout_toLeftOf="@id/imdb_btn"
            android:visibility="gone"
            android:text="WWW"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>